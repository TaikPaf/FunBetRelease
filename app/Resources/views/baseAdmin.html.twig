<div id="infoModalColoredHeader" tabindex="-1" role="dialog" class="modal fade" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Enregistrer votre paris</h4>
            </div>
            <div class="content-modal">
                <form class="form" id="fb_betbundle" method="post" style="min-height: 60px;">
                    <div class="form-group">
                        <label for="mise">Votre mise</label>
                        <input type="text" id="miseUser" name="mise" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block col-xs-2" type="submit" id="envoyer" value="Envoyer" />
                    </div>

                </form>
            </div>

        </div>

        </div>
    </div>
</div>
<script src="{{ asset('js/vendor.min.js') }}"></script>
<script src="{{ asset('js/elephant.min.js') }}"></script>
<script src="{{ asset('js/application.min.js') }}"></script>
<script>
    var oddid = '';
    $('.odd').on('click', function(){
        oddid = $(this).data('id');
    });
    loader = "<div id='loader' class='spinner spinner-primary spinner-lg' style='position:relative;min-height:60px;display: none;'></div>";
    $('.content-modal').append(loader);


        $('#fb_betbundle').on('submit', function(e) {
            e.preventDefault();

            var $this = $(this);
                $.ajax({
                    url: window.location+'bet/new/'+oddid,
                    type: $this.attr('method'),
                    data:  "&mise="+$this.find('#miseUser').val(),
                    beforeSend: function() {
                        $('#fb_betbundle').hide();
                        $('#loader').show();
                    },
                    complete: function(){
                        $('#fb_betbundle').show();
                        $('#loader').hide();
                    },
                    success: function() {
                        $('#infoModalColoredHeader').modal('hide');

                    },
                    error: function(){
                        alert('Credit insuffisant');
                    }

                });

        });

</script>


