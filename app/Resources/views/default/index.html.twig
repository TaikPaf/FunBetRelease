{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="row gutter-xs">
        <div class="col-md-6 col-lg-3 col-lg-push-0">
            <div class="card bg-primary">
                <div class="card-body">
                    <div class="media">
                        <div class="media-middle media-left">
                      <span class="bg-primary-inverse circle sq-48">
                        <span class="icon icon-user"></span>
                      </span>
                        </div>
                        <div class="media-middle media-body">
                            <h6 class="media-heading">Nouveaux utilisateurs</h6>
                            <h3 class="media-heading">
                                <span class="fw-l">1,760</span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-push-3">
            <div class="card bg-info">
                <div class="card-body">
                    <div class="media">
                        <div class="media-middle media-left">
                      <span class="bg-info-inverse circle sq-48">
                        <span class="icon icon-shopping-bag"></span>
                      </span>
                        </div>
                        <div class="media-middle media-body">
                            <h6 class="media-heading">Bets enregistrés</h6>
                            <h3 class="media-heading">
                                <span class="fw-l">1,256 </span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-pull-3">
            <div class="card bg-info">
                <div class="card-body">
                    <div class="media">
                        <div class="media-middle media-left">
                      <span class="bg-info-inverse circle sq-48">
                        <span class="icon icon-eur"></span>
                      </span>
                        </div>
                        <div class="media-middle media-body">
                            <h6 class="media-heading">Montant total dépensé</h6>
                            <h3 class="media-heading">
                                <span class="fw-l">1,654,865 </span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-pull-0">
            <div class="card bg-warning">
                <div class="card-body">
                    <div class="media">
                        <div class="media-middle media-left">
                      <span class="bg-warning-inverse circle sq-48">
                        <span class="icon icon-eur"></span>
                      </span>
                        </div>
                        <div class="media-middle media-body">
                            <h6 class="media-heading">Montant total gagné</h6>
                            <h3 class="media-heading">
                                <span class="fw-l">6,845,987 </span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary">
                <strong>Prochains matchs</strong>
                <span aria-hidden="true"> · </span>
                <span>Ligue 1</span>
            </div>
            <div class="card-body">
            {% for game in games %}
                <table class="table text-center">
                    <thead >
                    <tr>
                        <th></th>
                        <th class="text-center">1</th>
                        <th class="text-center">2</th>
                        <th class="text-center">Nul</th>
                    </tr>
                    </thead>
                    <tr>
                        <td>{{ game.homeTeam }} - {{ game.awayTeam }}</td>
                        {% for odd in game.odds %}
                        <td class="text-center">
                            <a class="btn btn-sm btn-labeled arrow-top arrow-success" href="#">
                                {{ odd.odd }}
                            </a>
                        </td>
                        {% endfor %}
                    </tr>
                </table>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

