{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="row gutter-xs">
            <div class="col-md-6 col-lg-3 col-lg-push-0">
                <div class="card bg-primary">
                    <div class="card-body">
                        <div class="media">
                            <div class="media-middle media-left">
                      <span class="bg-primary-inverse circle sq-48">
                        <span class="icon icon-user"></span>
                      </span>
                            </div>
                            <div class="media-middle media-body">
                                <h6 class="media-heading">Nombre d'utilisateurs</h6>
                                <h3 class="media-heading">
                                    <span class="fw-l">2,760</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-lg-push-3">
                <div class="card bg-info">
                    <div class="card-body">
                        <div class="media">
                            <div class="media-middle media-left">
                      <span class="bg-info-inverse circle sq-48">
                        <span class="icon icon-shopping-bag"></span>
                      </span>
                            </div>
                            <div class="media-middle media-body">
                                <h6 class="media-heading">Total dépensé</h6>
                                <h3 class="media-heading">
                                    <span class="fw-l">1 256 €</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-lg-pull-3">
                <div class="card bg-info">
                    <div class="card-body">
                        <div class="media">
                            <div class="media-middle media-left">
                      <span class="bg-info-inverse circle sq-48">
                        <span class="icon icon-clock-o"></span>
                      </span>
                            </div>
                            <div class="media-middle media-body">
                                <h6 class="media-heading">Paris enregistrés aujourd'hui</h6>
                                <h3 class="media-heading">
                                    <span class="fw-l">256</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 col-lg-pull-0">
                <div class="card bg-warning">
                    <div class="card-body">
                        <div class="media">
                            <div class="media-middle media-left">
                      <span class="bg-warning-inverse circle sq-48">
                        <span class="icon icon-usd"></span>
                      </span>
                            </div>
                            <div class="media-middle media-body">
                                <h6 class="media-heading">Total gagné</h6>
                                <h3 class="media-heading">
                                    <span class="fw-l">65 652€</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary">
                <strong>Prochains matchs</strong>
                <span aria-hidden="true"> · </span>
                <span>Ligue 1</span>
            </div>
            <div class="card-body">
                <table class="table text-center">
                    <thead >
                    <tr>
                        <th class="text-center">Date</th>
                        <th></th>
                        <th class="text-center">1</th>
                        <th class="text-center">Nul</th>
                        <th class="text-center">2</th>
                    </tr>
                    </thead>
            {% for game in games %}

                    <tr>
                        <td>{{ game.dateMatch|date("d-m-y à G:i", "Europe/Paris") }}</td>
                        <td class="text-left">

                            <span class="icon icon-soccer-ball-o"></span>   {{ game.homeTeam }} - {{ game.awayTeam}}
                        </td>
                        {% for odd in game.odds %}
                        <td class="text-center">
                            {%  if app.user != null %}
                                <button class="btn btn-outline-primary odd" data-id="{{ odd.id }}" data-toggle="modal" data-target="#infoModalColoredHeader" type="button" style="min-width:100%;">{{ odd.odd }}</button>
                            {% else %}
                                <button class="btn btn-outline-primary" type="button">{{ odd.odd }}</button>
                            {% endif %}
                        </td>
                        {% endfor %}
                    </tr>

            {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="row">

        </div>
    </div>




{% endblock %}

